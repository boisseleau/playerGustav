<form id="form" action="" method="post">
    <label for="nomHolocube">Nom* :</label>
    <input id="nomHolocube" type="text" name="nom" placeholder="ex: Holocube_Nantes" <% if(nom){%> value="<%= nom %>" <%} %> required><br>

    <label for="adresseIP">Adresse IP* :</label>
    <input id="adresseIP" type="text" name="adresseIP" placeholder="ex: 172.16.254.1" <% if(adresseIP){%> value="<%= adresseIP %>" <%} %> required><br>

    <label for="mdpHolocube">Mot de passe* :</label>
    <input id="mdpHolocube" type="password" name="password" <% if(mdp){%> value="<%= mdp %>" <%} %> required><br>

    <label for="clientHolo">Client:</label>
    <select id="clientHolo" name="client">
        <option></option>
        <% utilisateurs.forEach(function(utilisateur) { %>
        <option value="<%= utilisateur.id %>" <% if(client){if(utilisateur.id == client){%>selected=selected<%}}%>><%= utilisateur.username %></option>
        <% }); %>
    </select><br>
    <input id="submit" type="submit">
</form>

<% if (err) { %>
<span style="color:red">L'enregistrement a échoué, veuillez recommencer</span>
<% } %>